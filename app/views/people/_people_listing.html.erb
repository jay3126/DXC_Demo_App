<table class="people_listings">
  <thead>
    <tr>
      <th><%= t('people.people_listing.first_name') %></th>
      <th><%= t('people.people_listing.last_name') %></th>
      <th><%= t('people.people_listing.email') %></th>
      <th><%= t('people.people_listing.age') %></th>
      <th><%= t('people.people_listing.gender') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.email %></td>
        <td><%= person.age %></td>
        <td><%= person.gender %></td>
        <td><%= link_to t('global.show'), person, class: "btn btn-primary" %></td>
        <td><%= link_to t('global.edit'), edit_person_path(person), class: "btn btn-primary" %></td>
        <td><%= link_to t('global.destroy'), person, method: :delete, data: { confirm: t('global.are_you_sure') }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>