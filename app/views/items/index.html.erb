<p id="notice"><%= notice %></p>
<div class="container hr">
  <h1><%= t("items.items") %></h1>

  <% if @items.size > 0 %>
    <%= link_to t('items.download_as_excel'), items_path(format: :xlsx), class: "btn btn-primary" %>
    <%= link_to t('items.download_as_csv'), items_path(format: :csv), class: "btn btn-primary" %>
    <%= link_to t('items.download_as_pdf'), items_path(format: :pdf), class: "btn btn-primary" %>
  <% end %>
  <%= link_to t('items.upload_from_excel'), new_items_import_path, class: "btn btn-primary" %>
  <%= link_to t('items.new_item'), new_item_path, class: "btn btn-primary" %>

  <table>
    <thead>
      <tr>
        <th><%= t('items.name') %></th>
        <th><%= t('items.quantity') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td><%= link_to t('global.show'), item, class: "btn btn-primary" %></td>
          <td><%= link_to t('global.edit'), edit_item_path(item), class: "btn btn-primary" %></td>
          <td><%= link_to t('global.destroy'), item, method: :delete, data: { confirm: t('global.are_you_sure') }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>